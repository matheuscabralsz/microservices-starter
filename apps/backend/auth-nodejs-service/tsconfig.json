{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["node", "jest"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "jest.config.ts"],
  "exclude": ["node_modules", "dist", "out-tsc"]
}
